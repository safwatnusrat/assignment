<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".button">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resturants"
        android:text="Resturants"
        android:textSize="20sp"
        android:background="@color/orange"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="italic"/>




    <RadioGroup
        android:id="@+id/radioButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Pizza Hut"
            android:layout_marginLeft="5dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Pizza Express" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Yokoso" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Diner" />


    </RadioGroup>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:text="Desert"
        android:id="@+id/deserttext"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="italic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/redvelvet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Red Velvet Cake"
            android:layout_marginRight="10dp"/>

        <CheckBox
            android:id="@+id/cheesecake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CheeseCake"
            android:layout_marginRight="10dp"/>

        <CheckBox
            android:id="@+id/chocolatecake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chocolate Cake"
            android:layout_marginRight="10dp"/>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pizzatext"
        android:background="@color/orange"
        android:text="Pizza"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="italic"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/cheesepizza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cheese Pizza"
            android:layout_marginRight="10dp"/>

        <CheckBox
            android:id="@+id/beefpizza"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beef Pizza"
            android:layout_marginRight="10dp"/>

        <CheckBox
            android:id="@+id/mexicanhot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mexican Hot"
            android:layout_marginRight="10dp"/>


    </LinearLayout>
    <Button
        android:id="@+id/order_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="135dp"
        android:backgroundTint="@color/orange"
        android:textStyle="italic"
        android:text="Place Order" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate Us"
            android:textSize="20sp"
            android:layout_marginTop="90dp"
            android:textStyle="italic"/>
        <RatingBar
            android:id="@+id/ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stepSize="0.5"
            android:numStars="5"
            />
        <TextView
            android:id="@+id/rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rating 0:0"
            android:gravity="center"
            android:textStyle="italic"/>
    </LinearLayout>



    <TextView
        android:id="@+id/food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="18sp"
        android:textAllCaps="true"
        />
    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:textSize="20sp"
        android:id="@+id/cashondelivery"
        android:text="Cash On delivery?"
        android:checked="false"/>






</LinearLayout>